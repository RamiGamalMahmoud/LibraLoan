<UserControl
    x:Class="LibraLoan.Features.Management.RolesAndPermissions.Roles.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:home="clr-namespace:LibraLoan.Features.Management.RolesAndPermissions"
    xmlns:local="clr-namespace:LibraLoan.Features.Management.RolesAndPermissions.Roles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:ClassModifier="internal"
    mc:Ignorable="d">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,5"
            Orientation="Horizontal">

            <Button
                BorderBrush="{StaticResource SuccessBrush}"
                Command="{Binding ShowCreateCommand}"
                Foreground="{StaticResource SuccessBrush}"
                Style="{StaticResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Kind="PlusCircle" />

                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="Arial"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="إضافة دور" />
                </StackPanel>
            </Button>

        </StackPanel>

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            ColumnHeaderStyle="{StaticResource MyDataGridColumnHeader}"
            FontWeight="Bold"
            Foreground="{StaticResource BlackBrush}"
            IsReadOnly="True"
            ItemsSource="{Binding Models, IsAsync=True}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="الاسم" />
                <DataGridTextColumn Binding="{Binding DateCreated, StringFormat='yyyy/MM/dd HH:mm'}" Header="تاريخ الانشاء" />

                <DataGridTemplateColumn MaxWidth="300" Header="الصلاحيات">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>

                            <ItemsControl ItemsSource="{Binding Permissions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="2"
                                            Padding="2"
                                            HorizontalAlignment="Left"
                                            Background="{StaticResource LightBlueBrush}"
                                            CornerRadius="2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Resource.Name}" />
                                                <TextBlock Text=" - " />
                                                <TextBlock Text="{Binding Action.Name}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Margin="2,0"
                                    Padding="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.ShowUpdateCommand}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource MaterialDesignFlatButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="Pencil" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontWeight="Bold"
                                            Text="تعديل" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    Margin="2,0"
                                    Padding="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.DeleteCommand}"
                                    CommandParameter="{Binding}"
                                    Foreground="{StaticResource DangerBrush}"
                                    Style="{StaticResource MaterialDesignFlatButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="Delete" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontWeight="Bold"
                                            Text="حذف" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

</UserControl>
