<Window
    x:Class="LibraLoan.Features.Management.RolesAndPermissions.Roles.Editor.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan.Features.Management.RolesAndPermissions.Roles.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    x:ClassModifier="internal"
    FontFamily="{StaticResource FontFamily}"
    FontSize="16"
    FontWeight="Bold"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border Padding="50,20" FlowDirection="RightToLeft">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="50"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                        Text="الاسم" />
                    <TextBox
                        Width="200"
                        Margin="5"
                        Padding="10"
                        md:TextFieldAssist.HasClearButton="True"
                        BorderThickness="1"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>

            <Border
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="5">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Padding="10"
                        Background="{StaticResource WhiteBrush}"
                        FontSize="20"
                        Text="الصلاحيات"
                        TextAlignment="Center" />

                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="auto">
                        <StackPanel>


                            <ItemsControl ItemsSource="{Binding PermissionsGroups}">

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="3"
                                            Padding="2"
                                            BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="3">
                                            <StackPanel Margin="10">

                                                <Border
                                                    Padding="3"
                                                    Background="{StaticResource MaterialDesign.Brush.Primary}"
                                                    CornerRadius="3">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        Foreground="White"
                                                        Text="{Binding Resource}" />
                                                </Border>

                                                <Border>
                                                    <ItemsControl ItemsSource="{Binding Permissions}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border
                                                                    Margin="0,3"
                                                                    Padding="10,3"
                                                                    Background="White"
                                                                    BorderBrush="LightGray"
                                                                    BorderThickness="1"
                                                                    CornerRadius="2">
                                                                    <CheckBox
                                                                        Checked="CheckBox_Checked"
                                                                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=DataContext.UpdateSelectionCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        Content="{Binding Value.Action.Name}"
                                                                        Cursor="Hand"
                                                                        IsChecked="{Binding IsSelected}"
                                                                        Selector.SelectionChanged="CheckBox_SelectionChanged"
                                                                        Unchecked="CheckBox_Checked" />
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Border>
                                                <CheckBox Width="100" IsChecked="{Binding IsSelectedAll, UpdateSourceTrigger=PropertyChanged}">
                                                    <CheckBox.Style>
                                                        <Style BasedOn="{StaticResource MaterialDesignChoiceChipPrimaryRadioButton}" TargetType="CheckBox">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter Property="Content" Value="الغاء تحديد الكل" />
                                                                </Trigger>
                                                                <Trigger Property="IsChecked" Value="False">
                                                                    <Setter Property="Content" Value="تحديد الكل" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </CheckBox.Style>
                                                </CheckBox>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <StackPanel
                Grid.Row="2"
                Margin="0,10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    BorderThickness="0"
                    Command="{Binding SaveCommand}"
                    Content="حفظ"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="20"
                    IsDefault="True" />

                <StackPanel Width="20" />

                <Button
                    Background="{StaticResource DangerBrush}"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="إلغاء"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="20" />

            </StackPanel>

        </Grid>

    </Border>

</Window>
