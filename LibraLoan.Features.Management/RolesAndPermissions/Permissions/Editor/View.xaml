<Window
    x:Class="LibraLoan.Features.Management.RolesAndPermissions.Permissions.Editor.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan.Features.Management.RolesAndPermissions.Permissions.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mdc="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    x:ClassModifier="internal"
    FontFamily="{StaticResource FontFamily}"
    FontSize="16"
    FontWeight="Bold"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border Padding="20" FlowDirection="RightToLeft">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                        Text="نوع الصلاحية" />
                    <ComboBox
                        Width="150"
                        Margin="5"
                        Padding="10"
                        md:TextFieldAssist.HasClearButton="True"
                        Cursor="Hand"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Resources}"
                        SelectedItem="{Binding SelectedResource, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                        Text="نوع الإجراء" />
                    <ComboBox
                        Width="150"
                        Margin="5"
                        Padding="10"
                        md:TextFieldAssist.HasClearButton="True"
                        Cursor="Hand"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Actions}"
                        SelectedItem="{Binding SelectedAction}" />
                </StackPanel>

            </StackPanel>

            <Grid Grid.Row="1" Margin="0,30,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Width="60"
                    BorderThickness="0"
                    Command="{Binding SaveCommand}"
                    Content="حفظ"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="20"
                    IsDefault="True" />

                <Button
                    Grid.Column="1"
                    Width="60"
                    Background="{StaticResource DangerBrush}"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="إلغاء"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="20"
                    IsCancel="True" />

            </Grid>

        </Grid>

    </Border>

</Window>
