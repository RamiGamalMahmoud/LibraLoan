<Window
    x:Class="LibraLoan.Features.Clients.Editor.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan.Features.Clients.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mdc="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
    Title="{Binding Title}"
    MinWidth="400"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    x:ClassModifier="internal"
    FontFamily="{StaticResource FontFamily}"
    FontSize="18"
    FontWeight="Bold"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border Padding="20" FlowDirection="RightToLeft">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Width="300"
                    Orientation="Vertical">
                    <TextBlock Foreground="{StaticResource MaterialDesign.Brush.Primary}" Text="اسمل العميل" />
                    <TextBox
                        Padding="10"
                        md:TextFieldAssist.HasClearButton="True"
                        md:TextFieldAssist.HasLeadingIcon="True"
                        md:TextFieldAssist.LeadingIcon="TextBox"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Width="300"
                    Orientation="Vertical">
                    <TextBlock Foreground="{StaticResource MaterialDesign.Brush.Primary}" Text="رقم الهاتف" />
                    <TextBox
                        Padding="10"
                        md:TextFieldAssist.HasClearButton="True"
                        md:TextFieldAssist.HasLeadingIcon="True"
                        md:TextFieldAssist.LeadingIcon="Phone"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="2"
                    Width="300"
                    Margin="0,20,0,0"
                    Orientation="Vertical">
                    <TextBlock Foreground="{StaticResource MaterialDesign.Brush.Primary}" Text="البريد الإلكتروني" />
                    <TextBox
                        Padding="10"
                        md:TextFieldAssist.HasClearButton="True"
                        md:TextFieldAssist.HasLeadingIcon="True"
                        md:TextFieldAssist.LeadingIcon="Email"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

            </Grid>

            <StackPanel
                Grid.Row="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    BorderThickness="0"
                    Command="{Binding SaveCommand}"
                    Content="حفظ"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="18"
                    FontWeight="Bold"
                    IsDefault="True" />

                <Button
                    Width="100"
                    Margin="10,0,0,0"
                    Background="{StaticResource DangerBrush}"
                    BorderThickness="0"
                    Content="إلغاء"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="18"
                    FontWeight="Bold"
                    IsDefault="True" />
            </StackPanel>

        </Grid>

    </Border>

</Window>
