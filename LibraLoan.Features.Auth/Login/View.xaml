<Window
    x:Class="LibraLoan.Features.Auth.Login.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan.Features.Auth.Login"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="تسجيل الدخول"
    Width="650"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    x:ClassModifier="internal"
    FontFamily="Arial"
    FontSize="16"
    FontWeight="Bold"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border
        Padding="50"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FlowDirection="RightToLeft">
        <StackPanel Orientation="Vertical">

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,50"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <Image
                    Width="64"
                    Height="64"
                    Source="/LibraLoan.Resources;Component/Images/LibraLoan-64.png" />

                <StackPanel
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Margin="0,0,5,0"
                        Padding="2"
                        Background="{StaticResource LightBlueBrush}"
                        CornerRadius="2">

                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{StaticResource BlackBrush}"
                            Text="{Binding AppStateService.AppVersion}" />
                    </Border>
                    <TextBlock
                        FontSize="20"
                        Foreground="{StaticResource BlackBrush}"
                        Text="LibraLoan" />
                </StackPanel>

                <TextBlock
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="#7f8c8d"
                    Text="مرحبًا بك في تطبيق إدارة المكتبات!" />
                <TextBlock
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="#7f8c8d"
                    Text="سهل وسريع لتنظيم كتبك واستعارتها. تفضل بتسجيل الدخول للانطلاق!" />
            </StackPanel>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>


                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                    Text="اسم المستخدم" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Padding="10"
                    md:TextFieldAssist.HasClearButton="True"
                    md:TextFieldAssist.HasLeadingIcon="True"
                    md:TextFieldAssist.LeadingIcon="User"
                    md:TextFieldAssist.TextFieldCornerRadius="5"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                    Text="كلمة المرور" />

                <PasswordBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,20,0,0"
                    Padding="10"
                    md:PasswordBoxAssist.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                    md:TextFieldAssist.HasClearButton="True"
                    md:TextFieldAssist.HasLeadingIcon="True"
                    md:TextFieldAssist.LeadingIcon="Password"
                    md:TextFieldAssist.TextFieldCornerRadius="5"
                    BorderThickness="1"
                    Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}" />


            </Grid>

            <Button
                Width="200"
                Margin="0,50,0,0"
                md:TextFieldAssist.HasLeadingIcon="True"
                md:TextFieldAssist.LeadingIcon="Login"
                Command="{Binding SaveCommand}"
                Content="تسجيل الدخول"
                FontSize="20"
                FontWeight="Bold"
                IsDefault="True" />
        </StackPanel>
    </Border>


</Window>
