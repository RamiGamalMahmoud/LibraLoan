<Window
    x:Class="LibraLoan.Resources.ConfirmMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan.Resources"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="رسالة تأكيد"
    Width="400"
    Padding="20"
    d:Background="White"
    FontFamily="{StaticResource FontFamily}"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border Padding="10" FlowDirection="RightToLeft">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="5"
                Background="{StaticResource LightBlueBrush}"
                CornerRadius="5">
                <TextBlock
                    FontFamily="arial"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                    Text="رسالة تأكيد"
                    TextAlignment="Center" />
            </Border>

            <Border
                Grid.Row="1"
                Margin="0,10"
                Padding="10"
                Background="{StaticResource WhiteBrush}"
                CornerRadius="5">
                <TextBlock
                    Grid.Row="1"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="arial"
                    FontSize="20"
                    Foreground="{StaticResource BlackBrush}"
                    Text="{Binding Message}" />
            </Border>

            <StackPanel
                Grid.Row="2"
                Margin="0,5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5,0"
                    Click="Button_Click"
                    Content="موافق"
                    FontSize="16"
                    FontWeight="Bold"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                <Button
                    Width="100"
                    Margin="5,0"
                    BorderBrush="{StaticResource WarningBrush}"
                    Click="Button_Click_1"
                    Content="الغاء"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource WarningBrush}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            </StackPanel>

        </Grid>
    </Border>

</Window>
