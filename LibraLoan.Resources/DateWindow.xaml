<Window
    x:Class="LibraLoan.Resources.DateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan.Resources"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mdc="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
    Title="اختر التاريخ"
    Padding="20"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=local:DateWindowViewModel}"
    AllowsTransparency="True"
    FontFamily="{StaticResource FontFamily}"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Background>
        <SolidColorBrush Opacity="0.3" Color="Black" />
    </Window.Background>

    <Border
        Padding="50,20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource WhiteBrush}"
        CornerRadius="5"
        FlowDirection="RightToLeft">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="5"
                Background="{StaticResource LightBlueBrush}"
                CornerRadius="5">
                <TextBlock
                    FontFamily="arial"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                    Text="اختر التاريخ"
                    TextAlignment="Center" />
            </Border>

            <Border
                Grid.Row="1"
                Margin="0,10"
                Padding="10"
                Background="White"
                BorderBrush="{StaticResource DangerBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Visibility="{Binding HasMessage, Converter={x:Static mdc:BooleanToVisibilityConverter.CollapsedInstance}}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="arial"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource DangerBrush}"
                    Text="{Binding Message}" />
            </Border>

            <Border
                Grid.Row="2"
                Margin="0,10"
                Padding="10"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="5">
                <Calendar
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    md:TextFieldAssist.HasClearButton="True"
                    Cursor="Hand"
                    FlowDirection="LeftToRight"
                    FontFamily="arial"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{StaticResource BlackBrush}"
                    SelectedDate="{Binding SelectedDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </Border>

            <StackPanel
                Grid.Row="3"
                Margin="0,5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5,0"
                    Click="Button_Click"
                    Content="موافق"
                    FontSize="16"
                    FontWeight="Bold"
                    IsDefault="True"
                    IsEnabled="{Binding HasErrors, Converter={x:Static mdc:InvertBooleanConverter.Instance}}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                <Button
                    Width="100"
                    Margin="5,0"
                    BorderBrush="{StaticResource WarningBrush}"
                    Click="Button_Click_1"
                    Content="الغاء"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource WarningBrush}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            </StackPanel>

        </Grid>
    </Border>

</Window>
