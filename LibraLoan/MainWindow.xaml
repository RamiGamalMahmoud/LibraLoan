<Window
    x:Class="LibraLoan.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="LibraLoan"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    d:Height="600"
    d:Width="1000"
    x:ClassModifier="internal"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Border Padding="5" FlowDirection="RightToLeft">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Padding="5"
                Background="{StaticResource WhiteBrush}"
                CornerRadius="5">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical">
                        <Image
                            Grid.Row="0"
                            Width="64"
                            Height="64"
                            Source="/LibraLoan.Resources;Component/Images/LibraLoan-64.png" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                            Text="LibraLoan" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="{StaticResource GrayBrush}"
                            Text="{Binding AppStateService.AppVersion}" />

                        <TextBlock
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            FontFamily="arial"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource DangerBrush}"
                            Text="{Binding AppStateService.CurrentUser.Username}" />
                    </StackPanel>

                    <ListBox
                        Grid.Row="1"
                        ItemsSource="{Binding NavigationCommands}"
                        SelectedItem="{Binding Command}"
                        Style="{StaticResource MaterialDesignNavigationPrimaryListBox}">

                        <ListBox.ItemContainerStyle>
                            <Style BasedOn="{StaticResource MaterialDesignNavigationPrimaryListBoxItem}" TargetType="ListBoxItem">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Height" Value="50" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>

                                    <md:PackIcon Grid.Column="0" Kind="{Binding Icon}" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        FontFamily="Arial"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="{Binding Name}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                    <Button
                        Grid.Row="2"
                        Command="{Binding LogoutCommand}"
                        Foreground="{StaticResource DangerBrush}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon VerticalAlignment="Center" Kind="Logout" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="Arial"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="تسجيل الخروج" />
                        </StackPanel>
                    </Button>
                </Grid>

            </Border>

            <Border
                Grid.Column="2"
                Padding="5"
                Background="{StaticResource WhiteBrush}"
                CornerRadius="5">

                <Grid>
                    <Grid.Background>
                        <ImageBrush
                            ImageSource="/LibraLoan.Resources;Component/Images/LibraLoan.png"
                            Opacity="0.1"
                            Stretch="Uniform" />
                    </Grid.Background>

                    <md:DialogHost CloseOnClickAway="True" IsOpen="{Binding IsDialogOpen, Mode=OneWay}">

                        <md:DialogHost.DialogContent>
                            <ContentControl Content="{Binding DialogContent}" />
                        </md:DialogHost.DialogContent>

                        <ContentControl Content="{Binding CurrentView}" />

                    </md:DialogHost>

                </Grid>

            </Border>

        </Grid>

    </Border>

</Window>
