<Window
    x:Class="LibraLoan.Features.Authors.Editor.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraLoan.Features.Authors.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mdc="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
    Title="{Binding Title}"
    Width="500"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    x:ClassModifier="internal"
    FontFamily="{StaticResource FontFamily}"
    FontSize="18"
    FontWeight="Bold"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border Padding="50,50" FlowDirection="RightToLeft">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical">

                <StackPanel
                    MinWidth="200"
                    Margin="0,10"
                    Orientation="Vertical">
                    <TextBlock Foreground="{StaticResource MaterialDesign.Brush.Primary}" Text="اسم المؤلف" />
                    <TextBox
                        Name="TextName"
                        Padding="10"
                        md:TextFieldAssist.HasClearButton="True"
                        md:TextFieldAssist.HasLeadingIcon="True"
                        md:TextFieldAssist.LeadingIcon="UserTie"
                        md:TextFieldAssist.TextFieldCornerRadius="3"
                        BorderThickness="1"
                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    BorderThickness="0"
                    Click="Button_Click_1"
                    Command="{Binding SaveCommand}"
                    Content="حفظ"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="18"
                    FontWeight="Bold"
                    IsDefault="True" />

                <Button
                    Width="100"
                    Margin="10,0,0,0"
                    Background="{StaticResource DangerBrush}"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="إلغاء"
                    Cursor="Hand"
                    FontFamily="Arial"
                    FontSize="18"
                    FontWeight="Bold" />
            </StackPanel>

        </Grid>

    </Border>

</Window>
